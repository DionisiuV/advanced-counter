package com.valentin.advancedcounter.view

import android.view.LayoutInflater
import android.view.View
import android.view.ViewGroup
import androidx.recyclerview.widget.RecyclerView
import androidx.recyclerview.widget.RecyclerView.ViewHolder


class GeneralAdapter<T> private constructor() : RecyclerView.Adapter<GeneralViewHolder<T>>() {
    private var dataSet: List<T> = listOf()
    private var holder: GeneralViewHolder<T>? = null

    class Builder<T> {
        private val adapter = GeneralAdapter<T>()

        fun setData(dataSet: List<T>): Builder<T> {
            this.adapter.dataSet = dataSet

            return this
        }

        fun build(): GeneralAdapter<T> {
            return adapter
        }
    }

    override fun getItemCount(): Int {
        return dataSet.size
    }


    override fun onCreateViewHolder(parent: ViewGroup, viewType: Int): GeneralViewHolder<T> {
        val itemView = LayoutInflater.from(parent.context).inflate(holder!!, parent, false)

        return GeneralViewHolder(itemView)
    }

    override fun onBindViewHolder(holder: GeneralViewHolder<T>, position: Int) {
        holder.bind(holder.itemView, dataSet[position], position)
    }
}

abstract class GeneralViewHolder<T>(itemView: View) : ViewHolder(itemView) {
}

interface VH{

    fun getViewRes(): Int
    fun bind()
}